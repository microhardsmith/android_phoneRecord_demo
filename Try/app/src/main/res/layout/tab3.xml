<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tab3_input"
            android:layout_width="282dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_shape"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:text="Number here!"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="查询"
            android:id="@+id/tab3_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tab3_city_info"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:padding="10dp"
            android:text="This is where the city info lies"/>

        <TextView
            android:id="@+id/tab3_json_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="This is where the weather info lies"/>


    </LinearLayout>




</LinearLayout>
